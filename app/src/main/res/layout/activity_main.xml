<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/containerFirst"
        android:name="com.example.work5_5.BlankFragmentFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"/>

    <fragment
        android:id="@+id/containerSecond"
        android:name="com.example.work5_5.BlankFragmentSecond"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/containerThird"
        android:name="com.example.work5_5.BlankFragmentThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/containerFourth"
        android:name="com.example.work5_5.BlankFragmentFourth"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"/>
    <FrameLayout
        android:id="@+id/containerFifth"
        android:name="com.example.work5_5.BlankFragmentFifth"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"/></LinearLayout>
</LinearLayout>